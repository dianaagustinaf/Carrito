@{
}

@model IEnumerable<ProyectoGrupo3NT.Models.Producto>;


<table>

    @if (Model.Count<Producto>() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="fuenteoscura">@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>

                    <a class="btn btn-dark" asp-action="DeshabilitarProducto" asp-controller="Productos" asp-route-id=@item.ProductoId>Deshabilitar Producto</a>

                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td class="fuenteoscura">No hay productos habilitados en el sistema</td>
        </tr>
    }
</table>

<div>
    <a asp-action="Index">Volver al Listado de Productos</a>
</div>