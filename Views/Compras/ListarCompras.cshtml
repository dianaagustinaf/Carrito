@{
}
@model IEnumerable<ProyectoGrupo3NT.Models.Compra>;
@{
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th scope="col">@Html.DisplayNameFor(p => p.Fecha)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.Total)</th>
                <th scope="col">@Html.DisplayNameFor(p => p.CompraId)</th>
                <th scope="col"></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                    <td>@Html.DisplayFor(modelItem => item.CompraId)</td>
                    <td><a asp-action="DetallesCompra" asp-controller="Compras" asp-route-carritoId="@item.CarritoId">Ver Detalles</a></td>
                </tr>
            }
        </table>
    }
    else
    {
        <p class="h5">Aún no se ha realizado ninguna compra</p>
    }
}
